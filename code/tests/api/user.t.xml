  xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"
  xmlns:jx="http://jewishliturgy.org/ns/jlp-processor"
  xmlns:http="http://expath.org/ns/http-client">
  <suiteName>User API</suiteName>
  <description>
    <p>Test the user and contributor profile API</p>
    <author>Efraim Feinstein</author>
    <copyright>Copyright 2012 Efraim Feinstein,
    Licensed under the GNU Lesser General Public License, version 3 or later</copyright>
  </description>
  <asUser>testuser</asUser>
  <password>testuser</password>
  <setup>
    <store collection="/user" name="testuser.xml">
      <j:contributor>
        <tei:idno>testuser</tei:idno>
        <tei:name>Spike Tester</tei:name>
      </j:contributor>
    </store>
    <store collection="/user" name="notauser.xml">
      <j:contributor>
        <tei:idno>notauser</tei:idno>
        <tei:name>Not a spike user</tei:name>
      </j:contributor>
    </store>
    <store collection="/user" name="testuser2.xml">
      <j:contributor>
        <tei:idno>testuser2</tei:idno>
      </j:contributor>
    </store>
    <code><![CDATA[
      let $testuser := xs:anyURI("/user/testuser.xml")
      let $testuser2 := xs:anyURI("/user/testuser2.xml")
      let $notauser := xs:anyURI("/user/notauser.xml")
      return
      system:as-user("admin", $magic:password, (
        sm:chown($testuser, "testuser"),
        sm:chgrp($testuser, "testuser"),
        sm:chmod($testuser, "rw-r--r--"),
        sm:chown($notauser, "testuser2"),
        sm:chgrp($notauser, "everyone"),
        sm:chmod($notauser, "rw-rw-r--"),
        sm:chown($testuser2, "testuser2"),
        sm:chgrp($testuser2, "everyone"), (: there is no testuser2 group:)
        sm:chmod($testuser2, "rw-r--r--")
      ))
    ]]></code>
    <store collection="/user" name="TestProfile.xml">
      <j:contributor>
        <tei:idno>TestProfile</tei:idno>
        <tei:name>A Tester</tei:name>
      </j:contributor>
    </store>
  </setup>
  <tearDown>
    <remove-document collection="/user" name="TestProfile.xml"/>
    <remove-document collection="/user" name="testuser.xml"/>
    <remove-document collection="/user" name="not_a_real_contributors_profile.xml"/>
    <remove-document collection="/user" name="notauser.xml"/>
    <code><![CDATA[
      system:as-user("admin", $magic:password, 
        xmldb:remove("/user", "testuser2.xml"))
    ]]></code>
  </tearDown>
  <namespace prefix="html">http://www.w3.org/1999/xhtml</namespace>
  <namespace prefix="tei">http://www.tei-c.org/ns/1.0</namespace>
  <namespace prefix="j">http://jewishliturgy.org/ns/jlptei/1.0</namespace>
  <namespace prefix="jx">http://jewishliturgy.org/ns/jlp-processor</namespace>
  <imports>
    import module namespace user="http://jewishliturgy.org/api/user"
      at "xmldb:exist:///code/api/user.xqm";
    import module namespace magic="http://jewishliturgy.org/magic"
      at "xmldb:exist:///code/magic/magic.xqm";
  </imports>
  <TestSet>
    <testName>user:list()</testName>
    <test>
      <task>List all users</task>
      <code><![CDATA[
      user:list("", 1, 100)
      ]]></code> 
      <class href="common.t.xml#SearchResults"/>
      <xpath desc="returns at least 4 results">count(.//html:*[@class="result"])&gt;=4</xpath>
      <xpath desc="groups view is presented as an alternate">
        exists(.//html:li[@class="result"]/html:a[@class="document"]) and (
        every $d in .//html:li[@class="result"]/html:a[@class="document"]
        satisfies exists($d/following-sibling::html:a[@class="alt"][@property="groups"])
        )</xpath>
    </test>
    <test>
      <task>Query all users</task>
      <code><![CDATA[
      user:list("spike", 1, 100)
      ]]></code> 
      <class href="common.t.xml#SearchResults"/>
      <xpath desc="returns at least 2 results">count(.//html:*[@class="result"])&gt;=2</xpath>
    </test>
  </TestSet>
  <TestSet>
    <testName>user:get(): authenticated</testName>
    <test>
      <task>Get existing user profile</task>
      <code><![CDATA[
      user:get("testuser2")
      ]]></code> 
      <!-- a document-node() is returned... -->
      <expected desc="profile is returned" xpath="*">
        <j:contributor>
          <tei:idno>testuser2</tei:idno>
        </j:contributor>
      </expected>
    </test>
    <test>
      <task>Get non-existing user profile</task>
      <code><![CDATA[
      user:get("doesnotexist")
      ]]></code> 
      <class href="common.t.xml#NotFound"/>
    </test>
  </TestSet>
  <TestSet>
    <testName>user:get(): unauthenticated</testName>
    <test>
      <task>Get existing user profile</task>
      <code><![CDATA[
      ]]></code> 
    </test>
    <test>
      <task>Get non-existing user profile</task>
      <code><![CDATA[
      user:get("doesnotexist")
      ]]></code> 
      <class href="common.t.xml#NotFound"/>
    </test>
  </TestSet>
  <TestSet>
    <testName>user:post-xml(): unauthenticated</testName>
    <asUser/>
    <password/>
    <tearDown>
      <!-- remove user, group, and profile -->
      <code><![CDATA[
      system:as-user("admin", $magic:password,(
        if (xmldb:group-exists("testuser3"))
        then 
          try {
            sm:delete-group("testuser3")
          } 
          catch * { 
            util:log-system-out("WARNING: DELETING GROUPS IS BROKEN BEFORE r16453!") 
          }
        else (),
        if (xmldb:exists-user("testuser3"))
        then xmldb:delete-user("testuser3")
        else (),
        if (doc-available("/user/testuser3.xml"))
        then xmldb:remove("/user", "testuser3.xml")
        else ()
      ))
      ]]></code>
    </tearDown>
    <test>
      <task>Create a new user</task>
      <code><![CDATA[
      user:post-xml(document {
        <new>
          <user>testuser3</user>
          <password>testuser3</password>
        </new>
      })
      ]]></code> 
      <class href="common.t.xml#Created"/>
      <xpath desc="user has been created">xmldb:exists-user("testuser3")</xpath>
      <xpath desc="group has been created">system:as-user("admin", $magic:password, xmldb:group-exists("testuser3"))</xpath>
      <xpath desc="profile has been created">doc-available("/user/testuser3.xml")</xpath>
      <xpath desc="profile contains an idno equal to the user name">doc("/user/testuser3.xml")/j:contributor/tei:idno="testuser3"</xpath>
      <xpath desc="user profile permissions are correct">
      doc-available("/user/testuser3.xml") and
      sm:get-permissions(xs:anyURI("/user/testuser3.xml"))/*/(
        @owner = "testuser3" and @group="testuser3" and @mode="rw-r--r--"
      )</xpath>
    </test>
    <test>
      <task>Create a new user with blank username</task>
      <code><![CDATA[
      user:post-xml(document {
        <new>
          <password>testuser3</password>
        </new>
      })
      ]]></code>
      <class href="common.t.xml#BadRequest"/> 
    </test>
    <test>
      <task>Create a new user with blank password</task>
      <code><![CDATA[
      user:post-xml(document {
        <new>
          <user>testuser3</user>
          <password/>
        </new>
      })
      ]]></code>
      <class href="common.t.xml#BadRequest"/> 
    </test>
    <test>
      <task>Create a new user when the user already exists</task>
      <code><![CDATA[
      user:post-xml(document {
        <new>
          <user>testuser</user>
          <password>xxxxxx</password>
        </new>
      })
      ]]></code>
      <class href="common.t.xml#Unauthorized"/>
    </test>
    <test>
      <task>Create a new user when no user exists, but a profile exists</task>
      <code><![CDATA[
      user:post-xml(document {
        <new>
          <user>TestProfile</user>
          <password>xxxxxx</password>
        </new>
      })
      ]]></code> 
      <class href="common.t.xml#Forbidden"/>
    </test>
  </TestSet>
  <TestSet>
