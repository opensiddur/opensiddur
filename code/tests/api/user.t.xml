  <TestSet>
    <testName>user:delete(): authenticated</testName>
    <setup>
      <code><![CDATA[
      system:as-user("admin", $magic:password, (
        let $u := xmldb:create-user("testuser3", "testuser3", "everyone", ())
        let $g := try {
          xmldb:create-group("testuser3", ("admin", "testuser3"))
          } catch * { 
          util:log-system-out("WARNING: CREATING AN EXISTING GROUP CAUSES AN EXCEPTION INSTEAD OF A RETURN OF FALSE") 
          }
        let $s := xmldb:store("/user", "testuser3.xml",
          <j:contributor>
            <tei:idno>testuser3</tei:idno>
          </j:contributor>
          )
        let $uri := xs:anyURI("/user/testuser3.xml")
        let $ch := (
          sm:chown($uri, "testuser3"),
          sm:chgrp($uri, "testuser3"),
          sm:chmod($uri, "rw-r--r--")
        )
        return ()
      ))
      ]]></code>
    </setup>
    <tearDown>
      <code><![CDATA[
      system:as-user("admin", $magic:password, (
        if (doc-available("/user/testuser3.xml"))
        then xmldb:remove("/user", "testuser3.xml")
        else (),
        try { 
          if (xmldb:group-exists("testuser3"))
          then sm:delete-group("testuser3")
          else ()
        } 
        catch * { () },
        if (xmldb:exists-user("testuser3"))
        then xmldb:delete-user("testuser3")
        else ()
      ))
      ]]></code>
    </tearDown>
    <test>
      <task>Delete your own profile</task>
      <code><![CDATA[
      system:as-user("testuser3","testuser3", (
        user:delete("testuser3")
      ))
      ]]></code>
      <class href="common.t.xml#NoData"/>
      <xpath desc="user removed">not(xmldb:exists-user("testuser3"))</xpath>
      <xpath desc="group removed">not(sm:get-groups()="testuser3")</xpath>
      <xpath desc="profile removed">not(doc-available("/user/testuser3.xml"))</xpath>
    </test>
    <test>
      <task>Delete another user's profile</task>
      <code><![CDATA[
      system:as-user("testuser","testuser", (
        user:delete("testuser3")
      ))
      ]]></code>
      <class href="common.t.xml#Forbidden"/>
    </test>
    <test>
      <task>Delete a non-existent profile</task>
      <code><![CDATA[
      system:as-user("testuser","testuser", (
        user:delete("doesnotexist")
      ))
      ]]></code>
      <class href="common.t.xml#NotFound"/>
    </test>
    <test>
      <task>Delete a non-user profile</task>
      <code><![CDATA[
      system:as-user("testuser","testuser", (
        user:delete("notauser")
      ))
      ]]></code>
      <xpath desc="profile removed">not(doc-available("/user/notauser.xml"))</xpath>      
    </test>
    <test ignore="yes">
      <task>Delete a profile that has a reference elsewhere</task>
      <code><![CDATA[
        user:delete("withreference")
      ]]></code>
      <class href="common.t.xml#BadRequest"/>
    </test>
