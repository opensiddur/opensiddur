  <TestSet>
    <testName>user:put() not authenticated</testName>
    <asUser/>
    <password/>
    <setup>
      <code><![CDATA[
      system:as-user("admin", $magic:password, (
      xmldb:store("/user","notauser.xml",
        <j:contributor>
          <tei:idno>notauser</tei:idno>
