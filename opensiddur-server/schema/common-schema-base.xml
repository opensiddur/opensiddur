  <elementSpec ident="resp" module="core" mode="change">
    <!-- require @key in resp, remove @ref -->
    <attList>
      <attDef ident="ref" mode="delete"/>
      <attDef ident="key" mode="change" usage="req">
        <desc>Responsibility type, indicated using one of the allowed MARC relator codes, as defined at http://www
          aut (author), edt (editor), fac (facsimilist, scanner?), fnd (funder), pfr (proofreader), spn, (sponsor)</desc>
        <datatype minOccurs="1" maxOccurs="1">
          <rng:ref xmlns:rng="http://relaxng.org/ns/structure/1.0" name="data.enumerated"/>
        </datatype>
        <valList type="closed">
