<?xml version="1.0" encoding="UTF-8"?>
<tei:TEI 
  xmlns:tei="http://www.tei-c.org/ns/1.0"
  xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0">
  <tei:teiHeader>
    <tei:publicationStmt>
      <tei:availability>
        <tei:licence target="http://www.creativecommons.org/publicdomain/zero/1.0"/>
      </tei:availability> 
    </tei:publicationStmt>
  </tei:teiHeader>
  <j:conditions>
    <j:condition xml:id="cond1">
      <tei:fs type="opensiddur:time">
        <tei:f name="shabbat"><j:yes/></tei:f>
      </tei:fs>
    </j:condition>
    <j:condition xml:id="cond2">
      <tei:fs type="opensiddur:time">
        <tei:f name="shabbat"><j:no/></tei:f>
      </tei:fs>
    </j:condition>
  </j:conditions>
  <j:links>
    <tei:link type="condition" target="#seg1 #cond1"/>
    <tei:link type="condition" target="#concurrent #cond2"/>
    <tei:link type="condition" target="#range(ab1,ab2) #cond1"/>
    <tei:link type="condition" target="#div2 #cond1"/>
  </j:links>
  <tei:text>
    <j:streamText xml:id="stream">
      <tei:seg xml:id="seg1">A.</tei:seg>
      <tei:seg xml:id="seg2">B.</tei:seg>
      <tei:seg xml:id="seg3">C.</tei:seg>
      <tei:seg xml:id="seg4">D.</tei:seg>
    </j:streamText>
    <j:concurrent xml:id="concurrent">
      <j:layer type="div" xml:id="div-layer">
        <tei:div xml:id="div1">
            <tei:head>Head</tei:head>
            <tei:ab xml:id="ab1">
                <tei:ptr target="#seg1"/>
            </tei:ab>
            <tei:ab xml:id="ab2">
                <tei:ptr target="#seg2"/>
            </tei:ab>
        </tei:div>
        <tei:div xml:id="div2">
            <tei:head>Head 2</tei:head>
            <tei:ab xml:id="ab3">
                <tei:ptr target="#seg3"/>
            </tei:ab>
            <tei:ab xml:id="ab4">
                <tei:ptr target="#seg4"/>
            </tei:ab>
        </tei:div>
      </j:layer>
    </j:concurrent>
  </tei:text>
</tei:TEI>
