      <class href="../common.t.incl.xml#BadRequest"/>
    </test>
    <test>
      <task>For a resource with no write access</task>
      <code><![CDATA[
      lnk:put-access("NoWriteAccess", document{
        <a:access>
          <a:owner>testuser</a:owner>
          <a:group write="false">testuser</a:group>
