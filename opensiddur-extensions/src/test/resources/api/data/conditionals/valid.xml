  <tei:teiHeader>
      <tei:fileDesc>
         <tei:titleStmt>
            <tei:title type="main" xml:lang="en">Valid</tei:title>
         </tei:titleStmt>
         <tei:publicationStmt>
            <tei:distributor>
               <tei:ref target="http://opensiddur.org">Open Siddur Project</tei:ref>
            </tei:distributor>
            <tei:availability>
               <tei:licence target="http://www.creativecommons.org/publicdomain/zero/1.0"/>
            </tei:availability>
            <tei:date>2012-06-08</tei:date>
         </tei:publicationStmt>
         <tei:sourceDesc>
            <tei:bibl>
               <tei:ptr type="bibl" target="/data/sources/open_siddur_project"/>
               <tei:ptr type="bibl-content" target="#conditionals"/>
            </tei:bibl>
         </tei:sourceDesc>
      </tei:fileDesc>
  </tei:teiHeader>
  <tei:fsdDecl xml:id="conditionals">
      <tei:fsDecl type="Holidays">
         <tei:fsDescr>Describes conditionals for some holidays</tei:fsDescr>
         <tei:fDecl name="Shabbat">
            <tei:fDescr>On Shabbat</tei:fDescr>
            <j:vSwitch xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" type="yes-no-maybe"/>
            <!-- explicitly declared default -->
        <tei:vDefault>
               <j:maybe xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"/>
            </tei:vDefault>
         </tei:fDecl>
         <tei:fDecl name="Passover">
            <tei:fDescr>On Passover</tei:fDescr>
            <j:vSwitch xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" type="yes-no-maybe"/>
            <!-- implied default -->
      </tei:fDecl>
         <tei:fDecl name="Festival">
            <tei:fDescr>On Festivals</tei:fDescr>
            <j:vSwitch xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" type="yes-no-maybe"/>
            <!-- example conditional default -->
        <tei:vDefault>
               <tei:if>
                  <tei:f name="Passover">
                     <j:yes xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"/>
                  </tei:f>
                  <tei:then/>
                  <j:yes xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"/>
               </tei:if>
               <tei:if>
                  <tei:f name="Passover">
                     <j:maybe xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"/>
                  </tei:f>
                  <tei:then/>
                  <j:maybe xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0"/>
               </tei:if>
            </tei:vDefault>
         </tei:fDecl>
      </tei:fsDecl> 
      <tei:fsDecl type="On-Off-Switches">
         <tei:fsDescr>Demo an on-off switch</tei:fsDescr>
         <tei:fDecl name="Use-dingbat">
            <tei:fDescr>Whether to use a dingbat to indicate where the reader starts</tei:fDescr>
            <j:vSwitch xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0" type="on-off"/>
         </tei:fDecl>
      </tei:fsDecl>
  </tei:fsdDecl>
  <j:settings xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0">
      <tei:fs type="Holidays" xml:id="is-shabbat">
         <tei:f name="Shabbat">
            <j:yes/>
         </tei:f>
      </tei:fs>
      <tei:fs type="Holidays" xml:id="not-passover">
         <tei:f name="Passover">
            <j:no/>
         </tei:f>
      </tei:fs>
      <tei:fs type="Holidays" xml:id="may-be-festival">
         <tei:f name="Festival">
            <j:maybe/>
         </tei:f>
      </tei:fs>
      <tei:fs type="On-Off-Switches" xml:id="dingbat-on">
         <tei:f name="Use-dingbat">
            <j:on/>
         </tei:f>
      </tei:fs>
      <tei:fs type="On-Off-Switches" xml:id="dingbat-off">
         <tei:f name="Use-dingbat">
            <j:off/>
         </tei:f>
      </tei:fs>
  </j:settings>
  <j:conditions xmlns:j="http://jewishliturgy.org/ns/jlptei/1.0">
    <!-- basic yes condition -->
    <j:condition xml:id="is-passover">
         <tei:fs type="Holidays">
            <tei:f name="Passover">
               <j:yes/>
            </tei:f>
         </tei:fs>
      </j:condition>
      <!-- j:all -->
    <j:condition xml:id="is-passover-not-shabbat">
         <j:all>
            <tei:fs type="Holidays">
               <tei:f name="Passover">
                  <j:yes/>
               </tei:f>
            </tei:fs>
            <tei:fs type="Holidays">
               <tei:f name="Shabbat">
                  <j:no/>
               </tei:f>
            </tei:fs>
         </j:all>
      </j:condition>
      <!-- j:any -->
    <j:condition xml:id="is-festival-or-shabbat">
         <j:any>
            <tei:fs type="Holidays">
               <tei:f name="Festival">
                  <j:yes/>
               </tei:f>
            </tei:fs>
            <tei:fs type="Holidays">
               <tei:f name="Shabbat">
                  <j:yes/>
               </tei:f>
            </tei:fs>
         </j:any>
      </j:condition>
      <!-- j:oneOf -->
    <j:condition xml:id="is-one-of-shabbat-festival">
         <j:oneOf>
            <tei:fs type="Holidays">
               <tei:f name="Festival">
                  <j:yes/>
               </tei:f>
            </tei:fs>
            <tei:fs type="Holidays">
               <tei:f name="Shabbat">
                  <j:yes/>
               </tei:f>
            </tei:fs>
         </j:oneOf>
      </j:condition>
      <!-- j:not -->
    <j:condition xml:id="is-not-shabbat">
         <j:not>
            <tei:fs type="Holidays">
               <tei:f name="Shabbat">
                  <j:yes/>
               </tei:f>
            </tei:fs>
         </j:not>
      </j:condition>
  </j:conditions>
</tei:TEI>